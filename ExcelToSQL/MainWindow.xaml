<Window x:Class="ExcelToSQL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel to SQL Converter" Height="500" Width="800">
    <Grid>
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <!-- Data Preview Area -->
            <RowDefinition Height="1*" />
            <!-- Controls Area -->
        </Grid.RowDefinitions>

        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Data Preview Area -->
        <DataGrid x:Name="DataPreviewGrid" AutoGenerateColumns="True" Margin="10" Grid.Row="0" />

        <!-- Controls Area -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Drag-and-Drop Zone -->
                <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10" AllowDrop="True" Grid.Column="0"
                    DragEnter="Border_DragEnter" Drop="Border_Drop" MinWidth="150" Width="Auto" Height="50" Margin="5">
                    <TextBlock x:Name="DragFileText" Text="Drag File Here" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Border>

                <!-- Upload File Button -->
                <Button x:Name="UploadButton" Content="Upload File" Width="120" Click="UploadFile_Click" Margin="5" Grid.Column="1"/>

                <!-- ComboBox for Create/Update Table -->
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10" Grid.Column="2">
                    <TextBlock Text="Operation:" FontWeight="Bold" Margin="0,0,0,5" />
                    <ComboBox x:Name="OperationComboBox" Width="150" SelectionChanged="OperationComboBox_SelectionChanged" Margin="5">
                        <ComboBoxItem Content="Create Table" IsSelected="True" />
                        <ComboBoxItem Content="Update Table" />
                    </ComboBox>
                </StackPanel>

                <!-- Action Button -->
                <Button x:Name="GenerateSQLButton" Content="Generate SQL" Width="120" Click="GenerateSQL_Click" Margin="5" Grid.Column="4"/>

                <!-- Language Selector -->
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10" Grid.Column="3">
                    <TextBlock Text="Language:" FontWeight="Bold" Margin="0,0,0,5" />
                    <ComboBox x:Name="LanguageSelector" SelectionChanged="LanguageSelector_SelectionChanged" Width="120" Margin="5">
                        <ComboBoxItem Tag="en" Content="English" IsSelected="True" />
                        <ComboBoxItem Tag="es" Content="Español" />
                        <!--<ComboBoxItem Tag="fr" Content="Français" />-->
                    </ComboBox>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
